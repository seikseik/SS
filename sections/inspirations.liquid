<section class="inspiration_section">
  <div class="inspiration_container">
      {%- for block in section.blocks -%}
        {%- if block.settings.image -%}
          <div class="inspiration_image_container">
            {% assign image_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' %}

            <img class="inspiration_image Image--lazyLoad hide-no-js"
                 data-src="{{ image_url }}"
                 data-optimumx="1.2"
                 data-widths="[400, 600, 800, 1000, 1200, 1400, 1600, 1800, 2000, 2200]"
                 data-sizes="auto"
                 alt="{{ block.settings.image.alt | escape }}">

            <noscript>
              <img class="inspiration_image" src="{{ block.settings.image | img_url: '1000x' }}" alt="{{ block.settings.image.alt | escape }}">
            </noscript>
          </div>
      {%- endif -%}

    {%- endfor -%}
  </div>
</section>


{% schema %}
{
  "name": "Inspiration",
  "class": "shopify-section--slideshow",
  "max_blocks": 14,
  "settings": [

  ],
  "blocks": [
    {
      "type": "image",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "1800 x 800px .jpg recommended"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Image",
      "name": "Inspiration",
      "settings": {},
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
