<section class="Section about_image_section {% unless section.settings.image %}Section--spacingNormal{% endunless %}">


    {%- if section.settings.image != blank -%}
      <div class="FeatureText__ImageWrapper">
        {%- capture supported_sizes -%}{%- render 'image-size', sizes: '400,600,700,800,900,1000,1200', image: section.settings.image -%}{%- endcapture -%}
        <div class="AspectRatio" style="max-width: {{ section.settings.image.width }}px; --aspect-ratio: {{ section.settings.image.aspect_ratio }}">
          {%- assign image_url = section.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
          <img class="Image--lazyLoad Image--slide Image--fadeIn {{ section.settings.image_position | capitalize }}" data-src="{{ image_url }}" data-expand="-200" data-widths="[{{ supported_sizes }}]" data-sizes="auto" alt="{{ section.settings.image.alt | escape }}">

          <noscript>
            <img src="{{ section.settings.image | img_url: '800x' }}" alt="{{ section.settings.image.alt | escape }}">
          </noscript>
        </div>
      </div>
    {%- endif -%}

    <div class="about_image_container">
      <div class="about_image_text">
        {%- if section.settings.subheading != blank or section.settings.title != blank or section.settings.content != blank -%}
            {%- if section.settings.subheading != blank -%}
              <h3 class="about_subtitle Heading u-h6">{{ section.settings.subheading | escape }}</h3>
            {%- endif -%}

            {%- if section.settings.title != blank -%}
              <h2 class="about_title Heading u-h1">{{ section.settings.title | escape }}</h2>
            {%- endif -%}

            {%- if section.settings.content != blank -%}
              <div class="about_content Rte">
                {{ section.settings.content }}
              </div>
            {%- endif -%}

            {%- if section.settings.link_text != blank -%}
              <a href="{{ section.settings.link_url }}" class="Link Link--underline">{{ section.settings.link_text | escape }}</a>
            {%- endif -%}
        {%- endif -%}
      </div>
    </div>

    <div class="about_image_row">
      {%- if section.settings.image_two != blank -%}
        {%- capture supported_sizes -%}{%- render 'image-size', sizes: '400,600,700,800,900,1000,1200', image: section.settings.image_two -%}{%- endcapture -%}
        {%- assign image_url = section.settings.image_two | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
        <img class="Image--lazyLoad Image--slide Image--fadeIn" data-src="{{ image_url }}" data-expand="-200" data-widths="[{{ supported_sizes }}]" data-sizes="auto" alt="{{ section.settings.image_two.alt | escape }}">
      {%- endif -%}

      {%- if section.settings.image_three != blank -%}
        {%- capture supported_sizes -%}{%- render 'image-size', sizes: '400,600,700,800,900,1000,1200', image: section.settings.image_three -%}{%- endcapture -%}
        {%- assign image_url = section.settings.image_three | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
        <img class="Image--lazyLoad Image--slide Image--fadeIn" data-src="{{ image_url }}" data-expand="-200" data-widths="[{{ supported_sizes }}]" data-sizes="auto" alt="{{ section.settings.image_three.alt | escape }}">
        </div>
      {%- endif -%}
    </div>

</section>

{% schema %}
{
  "name": "Centered image and text",
  "class": "shopify-section--bordered",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "1200 x 1200px .png recommended"
    },
    {
      "type": "image_picker",
      "id": "image_two",
      "label": "Image",
      "info": "1200 x 1200px .png recommended"
    },
    {
      "type": "image_picker",
      "id": "image_three",
      "label": "Image",
      "info": "1200 x 1200px .png recommended"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Text",
      "default": "<p>Add your own custom content to give more information about your store, availability details...</p>"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Link text"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Link URL"
    }
  ],
  "presets": [
    {
      "category": "Text",
      "name": "Centered image and text",
      "settings": {}
    }
  ]
}
{% endschema %}
